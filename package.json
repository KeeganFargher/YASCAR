{
  "name": "yascar",
  "version": "0.1.0",
  "private": true,
  "description": "Yet Another Shift Code Automatic Redeemer - Monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:scraper": "npm run dev -w @yascar/scraper",
    "dev:web": "npm run dev -w @yascar/web",
    "dev:desktop": "npm run dev -w @yascar/desktop",
    "build": "npm run build -ws --if-present",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "npm run typecheck -ws --if-present"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "prettier": "^3.7.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
